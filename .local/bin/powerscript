#!/usr/bin/env bash

poweroffopt='⏻ Poweroff'
rebootopt=' Reboot'
logoutopt='󰗽 Logout'
sleepopt='󰒲 Sleep'

declare options="$poweroffopt\n$rebootopt\n$logoutopt\n$sleepopt"


choice=$(echo -e $options | rofi -dmenu -config $HOME/.local/share/powerscript/config.rasi -theme-str 'inputbar { enabled: false; }')
case $choice in
$poweroffopt) shutdown now ;;
$rebootopt) shutdown -r now ;;
$logoutopt) qtile cmd-obj -o cmd -f shutdown ;;
#$logoutopt) i3 exit ;;
$sleepopt)
  systemctl suspend
  slock
  ;;
$cancelopt) exit 0 ;;
*) exit 0 ;;
esac
